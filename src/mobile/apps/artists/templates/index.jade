extends ../../../components/layout/templates/main

append locals
  - assetPackage = 'mobile_artists'

block head
  title Browse Artists on Artsy | Modern and Contemporary Artists

block content
  .main-side-margin
    header.avant-garde-header-center.artists-page-header Artists

    nav.chevron-nav-list.artists-chevron-nav-list
      each gene in genes
        a.nav-image-item( href="/gene/#{gene.get('id')}/artists")
          img.artists-nav-item-nav-image( src="https://d7hftxdivxxvm.cloudfront.net/?resize_to=fit&width=200&height=200&quality=95&src=#{gene.imageUrl()}")
          p.artists-page-nav-item-label= gene.get('name')
