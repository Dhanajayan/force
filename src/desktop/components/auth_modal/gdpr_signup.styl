.gdpr-signup
  display flex
  flex-direction column
  &__form
    input
      width 100%
    &__checkbox
      margin 0 0 13px 0
      width 100%
      color grey-darker-color
      display flex
      .artsy-checkbox--checkbox
        flex-shrink 0
        > input[type='checkbox']
          opacity 0
          visibility visible
      &[data-state='error']
        .artsy-checkbox--checkbox
          background red-color
        span, a
          color red-color
      span
        text-align left
        margin-left 10px
        margin-top 4px
      span, a
        garamond-size('l-caption')
        font-size 13px
        color gray-darker-color
  &__divider
    width 100%
    color gray-darker-color
    text-align center
    avant-garde()
    avant-garde-size('s-headline')
    font-size 11px
    height 21px
    line-height 21px
  &__fb
    background #4e65b1

  &__small
    display block
    margin 10px 0
    color gray-darker-color
    garamond-size('l-caption')
    a
      color inherit

  .recaptcha-terms
    garamond-size('l-caption')
    font-size 13px
    color gray-darker-color
    margin 20px 0
    text-align center

  .tos-error
    color red-color
    text-align left
    height 1.23em
    margin-bottom 8px
    garamond-size('l-caption')

  .bordered-input
    width 100%
    margin-bottom 10px

  .avant-garde-button-black
    width 100%
